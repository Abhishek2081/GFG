#include<stdio.h>
#include<stdlib.h>

int main(void)
{
	int mat1[10][10],mat2[10][10],r1,r2,c1,c2,c;
	int mat3[10][10],r3,c3;

	printf("Enter Number of Rows For Matrix 1\n");
	scanf("%d",&r1);
    printf("Enter Number of Columns For Matrix 1\n");
	scanf("%d",&c1);

	printf("Enter Number of Rows For Matrix 2\n");
    scanf("%d",&r2);
	printf("Enter Number of Columns For Matrix 2\n");
    scanf("%d",&c2);

    do
    {
	printf("Enter Your Choice"
			"1.Input\n"
			"2.Output\n"
    		"3.Addition\n"
		    "4.Subtraction\n"
    		"5.Multiplication\n"
    		"6.Saddle Point\n"
    		"7.Exit\n");

    scanf("%d",&c);

    switch(c)
    {
       case 1: input(mat1,r1,c1);
               input(mat2,r2,c2);


               break;

       case 2: display(set1,m);
               display(set2,n);
               break;

       case 3: k=Union(set1,set2,set3,m,n);
               display(set3,k);
               break;

       case 4: k=Intersection(set1,set2,set3,m,n);
               display(set3,k);
               break;

       case 5: break;

       default: printf("Enter Correct Choice");
                break;
    }

       printf("\nDo u wanna continue?(1/0)");
       scanf("%d",&c);
    }  while(c==1);


	return EXIT_SUCCESS;
}

void input(int mat1[][10],int r1,int c1)
{

   printf("Enter Elements Of Matrix\n");
    for(int i=0;i<r1;i++)
     {
    	for(int j=0;j<c1;j++)
    	{
            scanf("%d",&mat1[i][j]);
    	}
     }

 }

void display(int mat1[][10],int r1,int c1)
{

	printf("\nMatrix is\n");
	for(int i=0;i<r1;i++)
	{
		for(int j=0;j<c1;j++)
		{
		    printf("%d\t",mat1[i][j]);
		}
	}

 }
